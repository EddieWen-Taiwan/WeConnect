<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/fullscreen"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:padding="@dimen/activity_margin"
	android:background="@color/rice"
	tools:context=".Register" >
    

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical" >
	
		<ImageView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:src="@drawable/logo_cover"
			android:contentDescription="@string/app_name" />
	
		<RelativeLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:orientation="horizontal" >
	
			<TextView
				android:id="@+id/show_register"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_centerHorizontal="true"
				android:layout_marginLeft="3dp"
				android:layout_marginRight="3dp"
				android:text="@string/show_register"
				android:textSize="18sp"
				android:textColor="@color/royalblue" />
	
			<View
				android:layout_width="match_parent"
				android:layout_height="2dp"
				android:layout_centerVertical="true"
				android:layout_toLeftOf="@id/show_register"
				android:layout_alignParentLeft="true"
				android:background="@color/royalblue" />
	
			<View
				android:layout_width="match_parent"
				android:layout_height="2dp"
				android:layout_centerVertical="true"
				android:layout_toRightOf="@id/show_register"
				android:layout_alignParentRight="true"
				android:background="@color/royalblue" />
	
		</RelativeLayout>
	
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="10dp"
			android:orientation="vertical" >
	
			<TextView
				android:id="@+id/show_account"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:textSize="16sp"
				android:text="@string/enter_account" />
	
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:layout_marginTop="10dp"
				android:background="@color/white"
				android:orientation="horizontal" >
	
				<Spinner
					android:id="@+id/email"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:gravity="center"
					android:layout_weight="1"
					android:layout_marginLeft="10dp" />
	
				<EditText
					android:id="@+id/enter_account"
					android:layout_width="0dip"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:layout_gravity="center_vertical"
					android:layout_marginRight="10dp"
					android:ems="10"
					android:gravity="center"
					android:hint="@string/student_id"
					android:inputType="number"
					android:textSize="16sp" >
	
					<requestFocus />
				</EditText>
	
			</LinearLayout>
	       
		</LinearLayout>
	
		<Button
			android:id="@+id/register"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="15dp"
			android:background="@color/white"
			android:gravity="center_vertical|center_horizontal"
			android:textSize="18sp"
			android:text="@string/register" />
		
		<TextView
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_marginTop="10dp"
		    android:text="@string/only" />
	
	</LinearLayout>
	
</ScrollView>
